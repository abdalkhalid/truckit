{
  "version": 2,
  "builds": [
    {
      "src": "TruckIt/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/.env"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/submit-form",
      "destination": "/backend/server.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
